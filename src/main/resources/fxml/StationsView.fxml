<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.mobiliteitsfabriek.ovapp.ui.controllers.StationsController"
      spacing="10" styleClass="content-area">
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nearby Stations" styleClass="title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search stations..."/>
    </HBox>
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <FlowPane fx:id="stationsContainer" hgap="10" vgap="10"/>
    </ScrollPane>
    
</VBox> 