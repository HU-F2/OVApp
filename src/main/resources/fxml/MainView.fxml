<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mobiliteitsfabriek.ovapp.ui.controllers.MainController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/main.css">
            
    <!-- Top: Menu Bar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Settings" onAction="#handleSettings"/>
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>

    <!-- Left: Navigation Panel -->
    <left>
        <VBox spacing="10" styleClass="nav-panel" minWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>
            <Button text="Journey Planner" maxWidth="Infinity" 
                    styleClass="nav-button" onAction="#handleJourneyPlanner"/>
            <Button text="Favorites" maxWidth="Infinity" 
                    styleClass="nav-button" onAction="#handleFavorites"/>
            <Button text="Recent Trips" maxWidth="Infinity" 
                    styleClass="nav-button" onAction="#handleRecentTrips"/>
        </VBox>
    </left>

    <!-- Center: Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Welcome to OV App" styleClass="welcome-text"/>
        </StackPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox styleClass="status-bar">
            <Label fx:id="statusLabel" styleClass="status-label" text="Ready"/>
        </HBox>
    </bottom>
    
</BorderPane> 